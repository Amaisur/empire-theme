  <style>
     #shopify-section-{{ section.id }} *{
       padding:0;
       margin:0;
       box-sizing:border-box;
     }
        .slide-main-5{
            width: 100%;
            height: 500px;
            position: relative;
            overflow: hidden;
            margin: 70px 0 !important;
        }
        .slide-card-5{
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            display: none;
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            color: #fff;
          /* animation: slideAnimation 1s ease-in-out forwards; */
        }
      @keyframes slideAnimation {
            from {
               
                transform: translateX(-100%);
            }
            to {
           
                transform: translateX(0%);
            }
        }
        .slide-content-5{
            width: 35%;
            position: absolute;
            top: 50%;
            right: 8%;
            transform: translateY(-50%);
            text-align: right;
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            justify-content: center;
            gap: 25px;
        }
        .slide-content-5 h2{
            font-size: {{section.settings.font_size-head}}px;
            font-weight:700;
            color: {{section.settings.head_color}};
            line-height:.7;
        }
        .slide-content-5 p{
            font-size: {{section.settings.font_size-para}}px;
            color: {{section.settings.description_color}};
            line-height:1.2;
        }
        .slide-content-5 a{
            text-decoration: none;
            display: block;
            width: 150px;
            padding: 10px 0px !important;
            text-align: center;
            font-size: 18px;
            background: #fff;
            color: blue;
            border-radius: 5px;
            transition: .5s;
        }
        .slide-content-5 a:hover{
            box-shadow: 0px 2px 5px 2px rgba(0, 0, 0, .5);
        }
        .slide-overlay-5{
            position: absolute;
            width: 100%;
            height: 100%;
            color: transparent;
            background:black;
        }
       .slide-main-5 .indicator {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 10px;
        }
       .slide-main-5 .dot {
            height: 10px;
            width: 10px;
            background-color: #333;
            border-radius: 50%;
            cursor: pointer;
        }
       .slide-main-5 .dot.active {
            background-color: #fff;
        }
       .slide-main-5 .arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            padding: 2px;
            font-size: 20px;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            border: none;
            border-radius: 50%;
            cursor: pointer;
        }

       .slide-main-5 .arrow svg path{
            fill: #fff;
        }
       .slide-main-5 .left-arrow {
            left: 20px;
        }
        .slide-main-5 .right-arrow {
            right: 20px;
        }

        @media(max-width:710px){
            .slide-content-5{
                width: 60%;
                left: 50%;
                transform: translate(-50%,-50%);
                text-align: center;
                align-items: center;
            }
        }

    </style>


<div class="slide-main-5">
  {% for block in section.blocks %}
    <div class="slide-card-5" style="background-image: url({{ block.settings.banner-img | img_url:'master'}})">
        <div class="slide-overlay-5" style="
          opacity: {{ block.settings.opacity-overlay }}%;
          ">.</div>
        <div class="slide-content-5">
            <h2>{{ block.settings.head-banner }}</h2>
            <p>{{ block.settings.sub-text }}</p>
            <a href="{{ block.settings.banner-url }}">{{ block.settings.button-text }}</a>
        </div>
    </div>
   {% endfor %}



    <div class="indicator" id="indicator"></div>
    <button class="arrow left-arrow" id="prevBtn">
        <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24"><path d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"/></svg>
    </button>
    <button class="arrow right-arrow" id="nextBtn">
        
    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" viewBox="0 0 24 24"><path d="M10.707 17.707 16.414 12l-5.707-5.707-1.414 1.414L13.586 12l-4.293 4.293z"/></svg>
    </button>
</div>
      
<script>
const cards = document.querySelectorAll('.slide-card-5');
const totalCards = cards.length;
let currentIndex = 0;

const indicator = document.getElementById('indicator');
for (let i = 0; i < totalCards; i++) {
    const dot = document.createElement('span');
    dot.classList.add('dot');
    dot.dataset.index = i;
    indicator.appendChild(dot);
    dot.addEventListener('click', function() {
        currentIndex = parseInt(this.dataset.index);
        updateSlider();
    });
}

cards[currentIndex].style.display = 'block';
updateIndicator();

function updateSlider() {
    cards.forEach(card => card.style.display = 'none');
    cards[currentIndex].style.display = 'block';
    updateIndicator();
}

function updateIndicator() {
    const dots = document.querySelectorAll('.dot');
    dots.forEach(dot => dot.classList.remove('active'));
    dots[currentIndex].classList.add('active');
}

setInterval(() => {
    currentIndex = (currentIndex + 1) % totalCards;
    updateSlider();
}, 10000);

const prevBtn = document.querySelector('#prevBtn');
const nextBtn = document.querySelector('#nextBtn');

prevBtn.addEventListener('click', () => {
    currentIndex = currentIndex === 0 ? totalCards - 1 : currentIndex - 1;
    updateSlider();
});

nextBtn.addEventListener('click', () => {
    currentIndex = currentIndex === totalCards - 1 ? 0 : currentIndex + 1;
    updateSlider();
});


</script>


